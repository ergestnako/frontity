{
  "name": "typescript-basic",
  "version": "0.1.0",
  "private": true,
  "description": "The minimum setup for Frontity using TypeScript",
  "scripts": {
    "dev": "ts-node ./node_modules/@frontity/core/src/scripts/dev.ts",
    "dev:inspect": "node --inspect -r ts-node/register ./node_modules/@frontity/core/src/scripts/dev.ts",
    "build": "ts-node ./node_modules/@frontity/core/src/scripts/build.ts",
    "build:inspect": "node --inspect -r ts-node/register ./node_modules/@frontity/core/src/scripts/build.ts",
    "serve": "ts-node ./node_modules/@frontity/core/src/scripts/serve.ts",
    "serve:inspect": "node --inspect -r ts-node/register ./node_modules/@frontity/core/src/scripts/serve.ts"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "frontity": "^0.1.0",
    "@frontity/core": "^0.2.0",
    "@frontity/file-settings": "^0.1.0",
    "@frontity/extension-example-1": "^1.0.0",
    "@frontity/extension-example-2": "^1.0.0"
  },
  "devDependencies": {
    "ts-node": "^8.0.3",
    "@frontity/types": "^0.1.0"
  }
}
