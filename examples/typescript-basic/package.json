{
  "name": "typescript-basic",
  "version": "1.0.1",
  "private": true,
  "description": "The minimum setup for Frontity using TypeScript",
  "scripts": {
    "dev": "ts-node --project ./node_modules/@frontity/core/tsconfig.json ./node_modules/@frontity/core/src/scripts/dev.ts",
    "build": "ts-node --project ./node_modules/@frontity/core/tsconfig.json ./node_modules/@frontity/core/src/scripts/build.ts",
    "serve": "ts-node --project ./node_modules/@frontity/core/tsconfig.json ./node_modules/@frontity/core/src/scripts/serve.ts"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@frontity/core": "^0.2.0",
    "@frontity/file-settings": "^0.X"
  },
  "devDependencies": {
    "ts-node": "^8.0.3"
  }
}
